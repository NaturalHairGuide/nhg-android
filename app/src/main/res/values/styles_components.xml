<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dip</item>
        <item name="android:background">#20000000</item>
    </style>

    <style name="DividerLight" parent="Divider">
        <item name="android:background">#20FFFFFF</item>
    </style>

    <style name="FormFields" parent="android:TextAppearance.Small">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="Button" parent="FormFields">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/primary_button_states</item>
    </style>

    <style name="Button_Google" parent="Button">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="SecondaryButton" parent="Button">
        <item name="android:background">@drawable/secondary_button_states</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="Link">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="InputField" parent="FormFields">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>
</resources>